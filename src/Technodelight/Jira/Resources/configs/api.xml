<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="technodelight.jira.api_client" class="Technodelight\Jira\Api\Client">
            <argument type="service" id="technodelight.jira.config" />
        </service>
        <service id="technodelight.jira.api_search_query_builder">
            <factory method="factory" class="Technodelight\Jira\Api\SearchQuery\Builder" />
        </service>
        <service id="technodelight.jira.api" class="Technodelight\Jira\Api\Api">
            <argument type="service" id="technodelight.jira.api_client" />
            <argument type="service" id="technodelight.jira.api_search_query_builder" />
        </service>
        <service id="technodelight.gitshell.shell" class="Technodelight\Jira\Api\Shell\Shell">
            <argument>/usr/bin/env git</argument>
        </service>
        <service id="technodelight.gitshell.api" class="Technodelight\Jira\Api\GitShell\Api">
            <argument type="service" id="technodelight.gitshell.shell" />
        </service>
        <service id="technodelight.github.api_builder" class="Technodelight\Jira\Api\GitHub\ApiBuilder">
            <argument type="service" id="technodelight.jira.config" />
        </service>
        <service id="technodelight.github.api" class="GitHub\Client">
            <factory method="build" service="technodelight.github.api_builder" />
        </service>
    </services>

</container>
